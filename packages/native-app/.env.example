# Environment Configuration Example
# Copy this file to .env for local development

# Node Environment
NODE_ENV=development

# API Configuration
EXPO_PUBLIC_API_URL=http://localhost:3000
EXPO_PUBLIC_WEB_APP_URL=http://localhost:8002

# Firebase Configuration
EXPO_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key_here
EXPO_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
EXPO_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
EXPO_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
EXPO_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=123456789
EXPO_PUBLIC_FIREBASE_APP_ID=1:123456789:web:abcdef123456

# Ford API Configuration
EXPO_PUBLIC_FORD_API_BASE_URL=https://api.ford.com
EXPO_PUBLIC_FORD_API_KEY=your_ford_api_key_here

# Lincoln API Configuration
EXPO_PUBLIC_LINCOLN_API_BASE_URL=https://api.lincoln.com
EXPO_PUBLIC_LINCOLN_API_KEY=your_lincoln_api_key_here

# App Configuration
EXPO_PUBLIC_APP_ENV=development
EXPO_PUBLIC_DEBUG_MODE=true
EXPO_PUBLIC_ENABLE_LOGGING=true

# Database Configuration
EXPO_PUBLIC_DB_ENCRYPTION_KEY=your_32_character_encryption_key

# Sync Configuration
EXPO_PUBLIC_SYNC_INTERVAL_MS=30000
EXPO_PUBLIC_MAX_RETRY_ATTEMPTS=3
EXPO_PUBLIC_OFFLINE_STORAGE_LIMIT_MB=100

# Sentry Configuration
# Get your Sentry DSN from https://sentry.io/settings/latitude-digital/projects/
EXPO_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id