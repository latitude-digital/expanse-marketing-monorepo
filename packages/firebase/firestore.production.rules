// PRODUCTION ENVIRONMENT RULES
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if request.auth != null;
    }

    match /events/{eventId} {
      allow read;
      match /surveys/{surveyId} {
        allow read, write: if request.auth != null;
      }
    }

    // Bulk SMS Sends - Admin only read access, functions-only write
    match /bulkSmsSends/{sendId} {
      // Admin-only read access
      allow read: if request.auth != null && request.auth.token.admin == true;
      // No direct write access - only Firebase Functions can write
      allow write: if false;

      // Recipients subcollection - Admin only read access, functions-only write
      match /recipients/{recipientId} {
        // Admin-only read access
        allow read: if request.auth != null && request.auth.token.admin == true;
        // No direct write access - only Firebase Functions can write
        allow write: if false;
      }
    }
  }
}