// STAGING ENVIRONMENT RULES
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if request.auth != null;
    }

    match /events/{eventId} {
      allow read;
      match /surveys/{surveyId} {
        allow read, write: if request.auth != null;
      }
    }
  }
}