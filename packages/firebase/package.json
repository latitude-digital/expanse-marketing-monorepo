{
  "name": "@expanse/firebase",
  "version": "1.0.0",
  "description": "Expanse Marketing Firebase Functions",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve": "firebase use dev && pnpm run build && firebase emulators:start --only functions",
    "shell": "firebase use dev && firebase functions:shell",
    "start": "pnpm run shell",
    "logs": "firebase functions:log",
    "test": "jest"
  },
  "engines": {
    "node": "20"
  },
  "dependencies": {
    "@expanse/shared": "workspace:*",
    "@aws-sdk/client-s3": "^3.864.0",
    "@aws-sdk/cloudfront-signer": "^3.862.0",
    "@aws-sdk/s3-presigned-post": "^3.864.0",
    "@sentry/node": "^10.3.0",
    "@sentry/profiling-node": "^10.3.0",
    "axios": "1.7.4",
    "cors": "^2.8.5",
    "firebase-admin": "^13.4.0",
    "firebase-functions": "^6.4.0",
    "google-auth-library": "^10.2.1",
    "moment-timezone": "^0.5.45",
    "sqids": "^0.3.0",
    "survey-core": "^2.3.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/axios": "^0.14.4",
    "@types/cors": "^2.8.19",
    "@types/jest": "^29.5.5",
    "@types/uuid": "^9.0.7",
    "firebase-functions-test": "^3.4.1",
    "firebase-pnpm-workspaces": "^1.0.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/__tests__/**"
    ],
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  }
}
